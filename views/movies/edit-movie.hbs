<h1>Edit Movie</h1>
<form action="/movies/{{this._id}}/edit" method="post">
<p>Title</p>
<input type="text" name="title" value="{{editMovie.title}}">
<p>Genre</p>
<input type="text" name="genre" value="{{editMovie.genre}}">
<p>Plot</p>
<input type="text" name="plot" value="{{editMovie.plot}}">
<br>
<label for="cast">Choose a cast:</label>
<select name="cast" multiple>
  {{#each allCelebrities}}
  <option value={{this._id}}>{{this.name}}</option>
  {{/each}}
</select>
<button type="submit">Submit</button>
</form>
